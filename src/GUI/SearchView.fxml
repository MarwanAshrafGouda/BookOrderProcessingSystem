            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="SearchGroup" />
         </toggleGroup>
      </RadioButton>
      <Label layoutX="21.0" layoutY="99.0" prefHeight="26.0" prefWidth="78.0" text="Search Using:" />
