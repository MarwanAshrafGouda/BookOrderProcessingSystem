         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="Author_rbtn" layoutX="376.0" layoutY="139.0" mnemonicParsing="false" onAction="#searchMethod" text="Author" toggleGroup="$SearchGroup">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="Category_rbtn" layoutX="63.0" layoutY="210.0" mnemonicParsing="false" onAction="#searchMethod" text="Category" toggleGroup="$SearchGroup">
