      <TextField fx:id="search_txt" layoutX="199.0" layoutY="277.0" prefHeight="26.0" prefWidth="243.0" />
      <Button layoutX="21.0" layoutY="354.0" mnemonicParsing="false" onAction="#back" text="BACK" />
      <ProgressIndicator fx:id="progressInd" layoutX="361.0" layoutY="324.0" prefHeight="30.0" prefWidth="38.0" visible="false" />
   </children>
