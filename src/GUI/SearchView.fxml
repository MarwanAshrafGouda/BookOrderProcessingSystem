            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="Publisher_rbtn" layoutX="243.0" layoutY="210.0" mnemonicParsing="false" onAction="#searchMethod" text="Publisher" toggleGroup="$SearchGroup">
